{
  "name": "@benefits/database",
  "version": "1.0.0",
  "private": true,
  "description": "Database models, migrations, and utilities for the benefits platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/seeds/index.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "backup:db": "tsx src/scripts/backup.ts",
    "generate:types": "prisma generate && tsc"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "@benefits/security": "workspace:*",
    "@benefits/multi-tenant": "workspace:*"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.6",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prisma": "^5.5.2",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "tsx src/seeds/index.ts"
  },
  "files": [
    "dist",
    "prisma"
  ]
}